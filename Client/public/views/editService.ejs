
    <!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Edit Your Service</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19. -->
                    <!-- The form should work on most web servers, but if the form is not working you may need to configure your web server differently. -->
                    <form name="sentMessage" id="contactForm">

                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label for="name">Name</label>
                                <input type="name" ng-model="formData.name" class="form-control"  placeholder="eg: John Plumbers" id="name"><!-- required data-validation-required-message="Please enter your email address.">-->
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>


                     <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label for="address">Address</label>
                                <input type="address" ng-model="formData.address" class="form-control"  placeholder="101 E San fernando" id="address"><!-- required data-validation-required-message="Please enter your email address.">-->
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                    <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label for="phone">Phone No</label>
                                <input type="phone" ng-model="formData.contact" class="form-control"  placeholder="408676757" id="phone"><!-- required data-validation-required-message="Please enter your email address.">-->
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>





                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label for="desc">Description</label>
                                <textarea rows="1" ng-model="formData.description" class="form-control" cols="50" name="description" placeholder ="We specialize in water heaters and pipe cleaning" style="font-family:Times New Roman;color:#919599" ></textarea>

                                <p class="help-block text-danger"></p>
                            </div>
                        </div>

                        <div class="row control-group">
                                <div class="form-group col-xs-12 floating-label-form-group controls">
                                    <label for="phone">Add a new member</label>
                                    <input type="phone" ng-model="formData.newMembers" class="form-control"  placeholder="Add a new member" id="phone"><!-- required data-validation-required-message="Please enter your email address.">-->
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>



                        <br>
                        <div id="success"></div>
                        <div class="row">
                            <div ><!--class="form-group col-xs-12">-->
                                <button type="submit" class="btn btn-success btn-lg" ng-click="updateService()">Update Cluster</button>

                            </div>


                        </div>
                    </form>

                    <div class="row control-group" style="width:250px;margin-left:440px;font-size:20px">
                       Existing Clients:
                       <ul style="list-style-type: none;font-size:17px;">
                           <li ng-repeat="client in formData.problems">
                               Name - {{client.name}}
                               Contact - {{client.contact}}
                               Address  - {{client.address}}
                               Problem - {{client.description}}
                           </li>

                       </ul>

                        </div>


                    <div class="row control-group" style="width:250px;margin-left:440px;font-size:20px">
                        Existing Members:
                        <ul style="list-style-type: none;font-size:17px;">
                           <li ng-repeat="member in formData.members">
                               {{member}}
                           </li>
                        </ul>

                    </div>

                </div>
            </div>
        </div>
    </section>
