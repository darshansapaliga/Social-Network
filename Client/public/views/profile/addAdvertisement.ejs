<div class="rmd-container" ng-controller="UserController">
  <h1> Add Advertisement </h1>
  <form class="form-horizontal" method="POST">
    <div class="form-group">
      <label class="col-sm-2 control-label">Name of Product:</label>
      <div class="col-sm-3">
        <input type="text" class="form-control" value={{name}} ng-model="name">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Specification:</label>
      <div class="col-sm-3">
        <input type="text" class="form-control" value={{specification}} ng-model="specification">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Quantity:</label>
      <div class="col-sm-3">
        <input type="number" class="form-control" value={{quantity}} ng-model="quantity">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Shipping from:</label>
      <div class="col-sm-3">
        <input type="text" class="form-control" value={{shipping}} ng-model="shipping">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Price:</label>
      <div class="col-sm-3">
        <input type="Number" class="form-control" value={{price}} ng-model="price">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Bidding allowed:</label>
      <div class="radio">
        <label>
          <input type="radio" ng-model="biddingStatus" value="true" name="biddingStatus">
          True
        </label>
        <label>
          <input type="radio" ng-model="biddingStatus" value="false" name="biddingStatus">
          False
        </label>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label"></label>
      <div class="col-sm-3">
        <button type="submit" class="btn btn-primary btn-block" ng-click="addAdvertisement(); userLogs('Publish Advertisement')">Publish</button>
      </div>
    </div>
  </form>
</div>
